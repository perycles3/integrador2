<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:textAlignment="center"
    android:background="@drawable/fondo5"
    tools:context="com.example.inelec.ConsultaIncidencia" >
    
    <LinearLayout
        android:id="@+id/linearcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="INGRESE EL CODIGO DE INCIDENCIA O EL NUMERO DE CONTRATO."
            android:layout_marginTop="20dp"
            android:layout_gravity="left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            
            <EditText
            android:id="@+id/txtCodigo"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
			
			<Button
			    android:id="@+id/btnConsultar"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:background="#CF3D2E"
        		android:textColor="#372E59"
        		android:textStyle="bold"
			    android:text="CONSULTAR" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vCodigo"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtCod"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vContrato"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtContrato"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vIncidencia"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtIncidencia"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
                
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vOperario"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtOperario"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vFechaI"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtFechaI"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vFechaA"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtFechaA"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vEstado"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
			
            <TextView
            android:id="@+id/vObv"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="left" />
            
            <TextView
            android:id="@+id/txtObv"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center" />	
        </LinearLayout>
        
    </LinearLayout>
   
    <ListView
        android:id="@+id/menuLateral"
        android:layout_width= "200dp"
    	android:layout_height="match_parent"
    	android:layout_gravity="start"
    	android:divider="@null"
    	android:dividerHeight="0dp"
    	android:background="#C2C2C2"/>

</android.support.v4.widget.DrawerLayout>
